<section id="tokenomics" class="py-20 bg-primary">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl font-display font-bold text-white mb-4">Tokenomics</h2>
      <p class="text-xl text-gray-300">Total Supply: 1,000,000,000 LEO</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 max-w-5xl mx-auto">
      {[
        { title: 'Presale', percentage: '50%', color: 'bg-blue-500' },
        { title: 'Liquidity', percentage: '20%', color: 'bg-green-500' },
        { title: 'Marketing', percentage: '15%', color: 'bg-purple-500' },
        { title: 'Team', percentage: '10%', color: 'bg-yellow-500' },
        { title: 'Partnerships', percentage: '5%', color: 'bg-red-500' }
      ].map((item) => (
        <div class="text-center" data-aos="fade-up">
          <div class={`w-32 h-32 mx-auto rounded-full ${item.color} flex items-center justify-center mb-4`}>
            <span class="text-2xl font-bold text-white">{item.percentage}</span>
          </div>
          <h3 class="text-white font-bold mb-2">{item.title}</h3>
        </div>
      ))}
    </div>
  </div>
</section>